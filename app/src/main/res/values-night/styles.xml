<resources>

    <!-- DARK THEME -->
    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@color/colorPrimary</item>
        <item name="actionBarStyle">@style/DarkTheme.ActionBarStyle</item>
    </style>

    <style name="DarkTheme.ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@color/colorPrimary</item>
        <item name="background">@color/colorAccent</item>
        <item name="elevation">0dp</item>
    </style>


    <style name="DarkTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

</resources>
